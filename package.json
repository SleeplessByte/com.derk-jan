{
  "name": "derk-jan.com",
  "version": "2.0.0",
  "private": true,
  "description": "Derk-Jan Karrenbeld's personal website",
  "license": "MIT",
  "author": "Derk-Jan Karrenbeld <derk-jan@karrenbeld.info>",
  "engines": {
    "node": ">=6.9.0",
    "npm": "^5.6.0",
    "yarn": "^1.3.0",
    "parcel-bundler": "^1.6.2"
  },
  "dependencies": {
    "core-js": "^2.5.3",
    "preact": "^8.2.7",
    "preact-compat": "^3.18.0",
    "raf": "^3.4.0",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "rmwc": "^1.2.1"
  },
  "scripts": {
    "precommit": "lint-staged",
    "preserve:dist": "yarn run build",
    "serve:dist": "yarn run serve dist",
    "start": "cross-env NODE_ENV=development NODE_PATH=./src parcel public/index.html",
    "prebuild": "rimraf dist",
    "build": "cross-env NODE_ENV=production NODE_PATH=./src parcel build public/index.html --public-url=/",
    "lint": "yarn run tslint --project ./tsconfig.json",
    "test": "cross-env NODE_ENV=test NODE_PATH=./src yarn run lint"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx,json,css}": [
      "prettier --single-quote --no-semi --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/history": "^4.6.2",
    "@types/jest": "^22.0.1",
    "@types/node": "^9.3.0",
    "@types/react": "^16.0.38",
    "@types/react-dom": "^16.0.4",
    "@types/react-router": "^4.0.20",
    "@types/react-router-dom": "^4.2.3",
    "@types/webpack-env": "^1.13.3",
    "autoprefixer": "^7.2.5",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "cross-env": "^5.1.3",
    "husky": "^0.14.3",
    "lint-staged": "^6.0.0",
    "parcel-plugin-typescript": "^0.5.3",
    "postcss-cssnext": "^3.1.0",
    "postcss-modules": "^1.1.0",
    "postcss-smart-import": "^0.7.6",
    "prettier": "1.9.2",
    "rimraf": "^2.6.2",
    "serve": "^6.4.4",
    "source-map-explorer": "^1.5.0",
    "tslint": "^5.9.0",
    "tslint-react": "^3.3.3",
    "typescript": "^2.6.2"
  },
  "main": "webpack.config.babel.js",
  "alias": {
    "react": "preact-compat",
    "react-dom": "preact-compat"
  }
}
