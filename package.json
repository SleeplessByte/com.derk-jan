{
  "name": "derk-jan.com",
  "version": "2.0.0",
  "private": true,
  "description": "Derk-Jan Karrenbeld's personal website",
  "license": "MIT",
  "author": "Derk-Jan Karrenbeld <derk-jan@karrenbeld.info>",
  "engines": {
    "node": ">=8.9.0",
    "npm": "^5.6.0",
    "yarn": "^1.5.1"
  },
  "dependencies": {
    "core-js": "^2.5.3",
    "preact": "^8.2.7",
    "preact-compat": "^3.18.0",
    "raf": "^3.4.0",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "rmwc": "^1.5.3",
    "style-loader": "^0.20.3"
  },
  "scripts": {
    "precommit": "lint-staged",
    "preserve:dist": "yarn run build",
    "serve:dist": "yarn run serve dist",
    "start": "cross-env webpack --mode development",
    "prebuild": "rimraf dist",
    "build": "cross-env webpack --mode production",
    "lint": "yarn run tslint --project ./tsconfig.json",
    "test": "cross-env NODE_ENV=test NODE_PATH=./src yarn run lint"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx,json,css}": [
      "prettier --single-quote --no-semi --write",
      "git add"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^7.2.5",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "cross-env": "^5.1.3",
    "css-loader": "^0.28.11",
    "cssnano": "^3.10.0",
    "file-loader": "^1.1.11",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^0.14.3",
    "image-webpack-loader": "^4.2.0",
    "lint-staged": "^6.0.0",
    "mini-css-extract-plugin": "^0.4.0",
    "path": "^0.12.7",
    "postcss": "^6.0.21",
    "postcss-cssnext": "^3.1.0",
    "postcss-loader": "^2.1.3",
    "postcss-modules": "^1.1.0",
    "postcss-smart-import": "^0.7.6",
    "prettier": "1.9.2",
    "rimraf": "^2.6.2",
    "serve": "^6.4.4",
    "source-map-explorer": "^1.5.0",
    "webpack": "^4.5.0",
    "webpack-cli": "^2.0.14",
    "webpack-dev-server": "^3.1.3"
  },
  "main": "webpack.config.babel.js",
  "alias": {
    "react": "preact-compat",
    "react-dom": "preact-compat"
  }
}
